{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "lib",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
    "examples/**/*.ts",
    "typings/**/*.d.ts",
    "node_modules/grpc-tsd/src/grpc.d.ts"
  ],
  "exclude": [
    "src/proto/**/*",
    "examples/**/*.ts",
    "src/index.d.ts",
    "node_modules"
  ]
}